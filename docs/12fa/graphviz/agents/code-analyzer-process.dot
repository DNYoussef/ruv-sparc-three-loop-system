// Code Analyzer Agent - Code Analysis & Quality Assessment
// Static analysis, complexity metrics, quality assessment, refactoring
digraph code_analyzer_agent {
    graph [rankdir=TB, bgcolor="#0a0e1a", fontname="Arial", fontsize=12, splines=ortho, nodesep=0.6, ranksep=1.0];
    node [shape=box, style="rounded,filled", fontname="Arial", fontsize=10, margin=0.2];
    edge [fontname="Arial", fontsize=9, color="#4a90e2"];

    subgraph cluster_init {
        label="Agent Initialization"; style=filled; color="#1a1f35"; fontcolor="#ffffff";
        analyzer_init [label="Code Analyzer\nInitialize", fillcolor="#d97706", fontcolor="#ffffff"];
        ast_parser [label="AST\nParser", fillcolor="#2d3748", fontcolor="#ffffff"];
        metrics_config [label="Metrics\nConfiguration", fillcolor="#2d3748", fontcolor="#ffffff"];
    }

    subgraph cluster_static {
        label="Static Analysis"; style=filled; color="#1a1f35"; fontcolor="#ffffff";
        syntax_analyzer [label="Syntax\nAnalyzer", fillcolor="#2563eb", fontcolor="#ffffff"];
        type_checker [label="Type\nChecker", fillcolor="#2563eb", fontcolor="#ffffff"];
        lint_runner [label="Lint\nRunner", fillcolor="#2563eb", fontcolor="#ffffff"];
        style_checker [label="Style\nChecker", fillcolor="#2563eb", fontcolor="#ffffff"];
    }

    subgraph cluster_complexity {
        label="Complexity Metrics"; style=filled; color="#1a1f35"; fontcolor="#ffffff";
        cyclomatic_calculator [label="Cyclomatic\nComplexity", fillcolor="#059669", fontcolor="#ffffff"];
        cognitive_calculator [label="Cognitive\nComplexity", fillcolor="#059669", fontcolor="#ffffff"];
        halstead_calculator [label="Halstead\nMetrics", fillcolor="#059669", fontcolor="#ffffff"];
        maintainability_scorer [label="Maintainability\nIndex", fillcolor="#059669", fontcolor="#ffffff"];
    }

    subgraph cluster_quality {
        label="Quality Assessment"; style=filled; color="#1a1f35"; fontcolor="#ffffff";
        smell_detector [label="Code Smell\nDetector", fillcolor="#0891b2", fontcolor="#ffffff"];
        duplication_finder [label="Duplication\nFinder", fillcolor="#0891b2", fontcolor="#ffffff"];
        dead_code_detector [label="Dead Code\nDetector", fillcolor="#0891b2", fontcolor="#ffffff"];
        security_scanner [label="Security\nScanner", fillcolor="#0891b2", fontcolor="#ffffff"];
    }

    subgraph cluster_refactoring {
        label="Refactoring Suggestions"; style=filled; color="#1a1f35"; fontcolor="#ffffff";
        extract_method_suggester [label="Extract Method\nSuggester", fillcolor="#dc2626", fontcolor="#ffffff"];
        rename_suggester [label="Rename\nSuggester", fillcolor="#dc2626", fontcolor="#ffffff"];
        simplify_suggester [label="Simplify\nSuggester", fillcolor="#dc2626", fontcolor="#ffffff"];
        pattern_suggester [label="Pattern\nSuggester", fillcolor="#dc2626", fontcolor="#ffffff"];
    }

    subgraph cluster_reporting {
        label="Reporting"; style=filled; color="#1a1f35"; fontcolor="#ffffff";
        report_generator [label="Report\nGenerator", fillcolor="#8b4789", fontcolor="#ffffff"];
        dashboard_builder [label="Dashboard\nBuilder", fillcolor="#8b4789", fontcolor="#ffffff"];
        trend_analyzer [label="Trend\nAnalyzer", fillcolor="#8b4789", fontcolor="#ffffff"];
    }

    subgraph cluster_collab {
        label="Agent Collaboration"; style=filled; color="#1a1f35"; fontcolor="#ffffff";
        reviewer_coord [label="Reviewer\nCoordination", fillcolor="#6366f1", fontcolor="#ffffff"];
        refactorer_coord [label="Refinement\nCoordination", fillcolor="#6366f1", fontcolor="#ffffff"];
    }

    analyzer_init -> ast_parser [label="Parse"];
    analyzer_init -> metrics_config [label="Load"];
    ast_parser -> syntax_analyzer [label="Analyze Syntax"];
    syntax_analyzer -> type_checker [label="Check Types"];
    type_checker -> lint_runner [label="Lint"];
    lint_runner -> style_checker [label="Check Style"];
    style_checker -> cyclomatic_calculator [label="Calculate"];
    cyclomatic_calculator -> cognitive_calculator [label="Calculate"];
    cognitive_calculator -> halstead_calculator [label="Calculate"];
    halstead_calculator -> maintainability_scorer [label="Score"];
    maintainability_scorer -> smell_detector [label="Detect Smells"];
    smell_detector -> duplication_finder [label="Find Duplicates"];
    duplication_finder -> dead_code_detector [label="Detect Dead Code"];
    dead_code_detector -> security_scanner [label="Scan Security"];
    security_scanner -> extract_method_suggester [label="Suggest"];
    extract_method_suggester -> rename_suggester [label="Suggest"];
    rename_suggester -> simplify_suggester [label="Suggest"];
    simplify_suggester -> pattern_suggester [label="Suggest"];
    pattern_suggester -> report_generator [label="Generate"];
    report_generator -> dashboard_builder [label="Build Dashboard"];
    dashboard_builder -> trend_analyzer [label="Analyze Trends"];
    trend_analyzer -> reviewer_coord [label="Coordinate"];
    pattern_suggester -> refactorer_coord [label="Coordinate"];

    subgraph cluster_legend {
        label="Legend"; style=filled; color="#1a1f35"; fontcolor="#ffffff";
        legend1 [label="Code Analyzer", fillcolor="#d97706", fontcolor="#ffffff"];
        legend2 [label="Static Analysis", fillcolor="#2563eb", fontcolor="#ffffff"];
