digraph content_creator_workflow {
    // Graph properties
    rankdir=TB;
    bgcolor="#f8f9fa";
    fontname="Arial";
    fontsize=14;
    label="Content Creator Agent Workflow\nAgent ID: agent-079 | Category: Business\nPurpose: Content creation and copywriting";
    labelloc=t;
    compound=true;

    // Node styling
    node [fontname="Arial", fontsize=11, style="filled"];

    // Start/End nodes
    start [label="Content Request", shape=oval, fillcolor="#e8f5e9", color="#4caf50", penwidth=2];
    end [label="Content Published", shape=oval, fillcolor="#e8f5e9", color="#4caf50", penwidth=2];

    // Phase 1: Research & Planning
    subgraph cluster_research {
        label="Phase 1: Research & Planning";
        style=filled;
        fillcolor="#fff3e0";
        color="#ff9800";
        penwidth=2;

        r1 [label="Topic Research", shape=box, fillcolor="#ffecb3"];
        r2 [label="Audience Analysis", shape=box, fillcolor="#ffecb3"];
        r3 [label="Keyword Research", shape=box, fillcolor="#ffecb3"];
        r4 [label="Competitive\nContent Analysis", shape=box, fillcolor="#ffecb3"];
        r5 [label="Content Brief", shape=box, fillcolor="#ffecb3"];

        r1 -> r2 -> r3 -> r4 -> r5;
    }

    // Phase 2: Content Creation
    subgraph cluster_creation {
        label="Phase 2: Content Creation";
        style=filled;
        fillcolor="#e3f2fd";
        color="#2196f3";
        penwidth=2;

        cc1 [label="Outline Creation", shape=box, fillcolor="#bbdefb"];
        cc2 [label="First Draft", shape=box, fillcolor="#bbdefb"];
        cc3 [label="SEO Optimization", shape=box, fillcolor="#bbdefb"];
        cc4 [label="Visual Integration", shape=box, fillcolor="#bbdefb"];
        cc5 [label="CTA Placement", shape=box, fillcolor="#bbdefb"];

        cc1 -> cc2 -> cc3 -> cc4 -> cc5;
    }

    // Phase 3: Content Types (Parallel)
    subgraph cluster_types {
        label="Phase 3: Content Type Specialization";
        style=filled;
        fillcolor="#f3e5f5";
        color="#9c27b0";
        penwidth=2;

        ct1 [label="Blog Posts", shape=box, fillcolor="#e1bee7"];
        ct2 [label="Social Media\nContent", shape=box, fillcolor="#e1bee7"];
        ct3 [label="Email Copy", shape=box, fillcolor="#e1bee7"];
        ct4 [label="Landing Pages", shape=box, fillcolor="#e1bee7"];
        ct5 [label="Video Scripts", shape=box, fillcolor="#e1bee7"];
        ct6 [label="Whitepapers/\nEbooks", shape=box, fillcolor="#e1bee7"];
    }

    // Phase 4: Editing & Refinement
    subgraph cluster_editing {
        label="Phase 4: Editing & Refinement";
        style=filled;
        fillcolor="#fce4ec";
        color="#e91e63";
        penwidth=2;

        e1 [label="Grammar Check", shape=box, fillcolor="#f8bbd0"];
        e2 [label="Readability\nOptimization", shape=box, fillcolor="#f8bbd0"];
        e3 [label="Fact Checking", shape=box, fillcolor="#f8bbd0"];
        e4 [label="Brand Voice\nAlignment", shape=box, fillcolor="#f8bbd0"];
        e5 [label="Final Polish", shape=box, fillcolor="#f8bbd0"];

        e1 -> e2 -> e3 -> e4 -> e5;
    }

    // Phase 5: Quality Assurance
    subgraph cluster_qa {
        label="Phase 5: Quality Assurance";
        style=filled;
        fillcolor="#e0f2f1";
        color="#009688";
        penwidth=2;

        qa1 [label="Plagiarism Check", shape=box, fillcolor="#b2dfdb"];
        qa2 [label="SEO Score\nValidation", shape=box, fillcolor="#b2dfdb"];
        qa3 [label="Link Verification", shape=box, fillcolor="#b2dfdb"];
        qa4 [label="Mobile Preview", shape=box, fillcolor="#b2dfdb"];
        qa5 [label="Accessibility\nCheck", shape=box, fillcolor="#b2dfdb"];

        qa1 -> qa2 -> qa3 -> qa4 -> qa5;
    }

    // Phase 6: Publishing & Promotion
    subgraph cluster_publish {
        label="Phase 6: Publishing & Promotion";
        style=filled;
        fillcolor="#fff9c4";
        color="#fbc02d";
        penwidth=2;

        p1 [label="CMS Upload", shape=box, fillcolor="#fff59d"];
        p2 [label="Meta Data Setup", shape=box, fillcolor="#fff59d"];
        p3 [label="Social Sharing", shape=box, fillcolor="#fff59d"];
        p4 [label="Email Distribution", shape=box, fillcolor="#fff59d"];
        p5 [label="Performance\nTracking", shape=box, fillcolor="#fff59d"];

        p1 -> p2 -> p3 -> p4 -> p5;
    }

    // Decision nodes
    approval [label="Content\nApproved?", shape=diamond, fillcolor="#ffeb3b", color="#f57f17", penwidth=2];
    quality [label="Quality\nStandards Met?", shape=diamond, fillcolor="#ffeb3b", color="#f57f17", penwidth=2];
    type_select [label="Select Content\nType", shape=diamond, fillcolor="#c8e6c9", color="#388e3c", penwidth=2];

    // Flow connections
    start -> r1 [label="Begin\nResearch"];
    r5 -> cc1 [label="Brief\nComplete"];
    cc5 -> type_select [label="Draft\nComplete"];

    type_select -> ct1;
    type_select -> ct2;
    type_select -> ct3;
    type_select -> ct4;
    type_select -> ct5;
    type_select -> ct6;

    ct1 -> e1;
    ct2 -> e1;
    ct3 -> e1;
    ct4 -> e1;
    ct5 -> e1;
    ct6 -> e1;

    e5 -> qa1 [label="Editing\nComplete"];
    qa5 -> quality [label="Review\nQuality"];

    quality -> approval [label="Pass"];
    quality -> e1 [label="Issues Found", style=dashed, color="#f44336"];

    approval -> p1 [label="Yes"];
    approval -> cc2 [label="No - Revise", style=dashed, color="#ff9800"];

    p5 -> end [label="Published"];

    // Capabilities legend
    capabilities [label="Key Capabilities:\n• Content Creation\n• Copywriting\n• SEO Writing\n• Editing & Proofreading\n• Brand Voice Alignment\n• Multi-format Content", shape=note, fillcolor="#e8eaf6", color="#3f51b5", fontsize=10];

    // Tools & Resources
    tools [label="Tools:\n• Grammarly\n• Hemingway Editor\n• Yoast SEO\n• Canva\n• WordPress/CMS", shape=note, fillcolor="#ede7f6", color="#673ab7", fontsize=10];

    // Metadata
    metadata [label="Agent: content-creator\nPriority: Medium\nComplexity: Medium\nGraphviz Priority: 79", shape=note, fillcolor="#f5f5f5", color="#9e9e9e", fontsize=9];
}
