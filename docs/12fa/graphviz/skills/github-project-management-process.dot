digraph GITHUB_PROJECT_MANAGEMENT_WORKFLOW {
  rankdir=TB;
  node [shape=box, style="rounded,filled"];

  subgraph cluster_initialization {
    label="Project Management Initialization";
    style="filled,rounded";
    color="lightblue";
    bgcolor="#E8F4F8";

    start [label="Project Mgmt Invoked", shape=ellipse, fillcolor=lightblue];
    load_spec [label="Load Project Config"];
    validate_input [label="Validate GitHub Project"];
    check_deps [label="Check gh CLI & API"];

    start -> load_spec -> validate_input -> check_deps;
  }

  subgraph cluster_validation {
    label="Policy Validation";
    style="filled,rounded";
    color="orange";
    bgcolor="#FFF8E8";

    check_policy [shape=diamond, label="12-FA\nCompliant?"];
    check_secrets [shape=diamond, label="No Secrets\nin Root?"];

    policy_violation [shape=octagon, fillcolor=crimson, label="BLOCKED\nPolicy Violation"];
    secrets_violation [shape=octagon, fillcolor=crimson, label="BLOCKED\nRule #1: No Secrets in Root"];
  }

  check_deps -> check_policy;
  check_policy -> check_secrets [label="Pass"];
  check_policy -> policy_violation [label="Fail"];
  check_secrets -> secrets_violation [label="Secrets Found"];

  subgraph cluster_execution {
    label="Project Management Phase";
    style="filled,rounded";
    color="purple";
    bgcolor="#F0E8F8";

    analyze_issues [label="Analyze Issues & PRs", fillcolor=purple];
    triage_issues [label="Triage & Prioritize", fillcolor=purple];
    update_board [label="Update Project Board", fillcolor=purple];
    assign_tasks [label="Assign Tasks to Agents", fillcolor=purple];
    tasks_check [shape=diamond, label="Tasks\nAssigned?"];

    execution_error [shape=octagon, fillcolor=orange, label="Execution Error"];
    retry_logic [label="Retry Assignment", fillcolor=yellow];
  }

  check_secrets -> analyze_issues [label="Pass"];
  analyze_issues -> triage_issues -> update_board -> assign_tasks;
  assign_tasks -> tasks_check;
  tasks_check -> execution_error [label="No"];
  execution_error -> retry_logic -> assign_tasks [label="Retry", style=dashed];
  retry_logic -> escalate [label="Max Retries"];

  subgraph cluster_coordination {
    label="Project Coordination";
    style="filled,rounded";
    color="blue";
    bgcolor="#E8E8F8";

    memory_store [label="Store Project State", fillcolor=lightblue];
    track_progress [label="Track Sprint Progress", fillcolor=lightblue];
    notify_coordinator [label="Notify Team", fillcolor=lightblue];
  }

  tasks_check -> memory_store [label="Yes"];
  memory_store -> track_progress -> notify_coordinator;

  subgraph cluster_quality {
    label="Quality Validation";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    validate_output [shape=diamond, label="Project Board\nUpdated?"];
    verify_assignments [label="Verify Task Assignments", fillcolor=lightgreen];
    assignment_check [shape=diamond, label="Valid?"];
    quality_gate_fail [shape=octagon, fillcolor=orange, label="Quality Gate Failed"];
  }

  notify_coordinator -> validate_output;
  validate_output -> verify_assignments [label="Yes"];
  validate_output -> quality_gate_fail [label="No"];
  verify_assignments -> assignment_check;
  assignment_check -> quality_gate_fail [label="No"];

  subgraph cluster_completion {
    label="Completion";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    generate_report [label="Generate Project Report", fillcolor=lightgreen];
    cleanup [label="Cleanup Resources", fillcolor=lightgreen];
    log_completion [label="Log Metrics"];
    success [label="Project Updated", shape=doublecircle, fillcolor=green, style="filled,bold"];
  }

  assignment_check -> generate_report [label="Yes"];
  generate_report -> cleanup -> log_completion -> success;

  subgraph cluster_errors {
    label="Error Handling & Escalation";
    style="filled,rounded";
    color="red";
    bgcolor="#F8E8E8";

    escalate [shape=hexagon, fillcolor=yellow, label="Escalate to User"];
    log_error [label="Log Error Details", fillcolor=orange];
    rollback [label="Rollback Changes", fillcolor=orange];
    failure [label="Project Mgmt Failed", shape=doublecircle, fillcolor=red, style="filled,bold"];
  }

  escalate -> log_error;
  quality_gate_fail -> log_error;
  policy_violation -> log_error;
  secrets_violation -> log_error;
  log_error -> rollback -> failure;
}
