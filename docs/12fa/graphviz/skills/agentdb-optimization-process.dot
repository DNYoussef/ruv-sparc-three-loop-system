digraph AGENTDB_OPTIMIZATION_WORKFLOW {
  // Layout configuration
  rankdir=TB;
  node [shape=box, style="rounded,filled"];

  // =============================================================================
  // INITIALIZATION PHASE
  // =============================================================================
  subgraph cluster_initialization {
    label="Skill Initialization";
    style="filled,rounded";
    color="lightblue";
    bgcolor="#E8F4F8";

    start [label="Skill Invoked", shape=ellipse, fillcolor=lightblue];
    load_spec [label="Load skill.yaml"];
    validate_input [label="Validate Optimization\nTargets"];
    check_deps [label="Check AgentDB\nVersion"];

    start -> load_spec;
    load_spec -> validate_input;
    validate_input -> check_deps;
  }

  // =============================================================================
  // VALIDATION & POLICY ENFORCEMENT
  // =============================================================================
  subgraph cluster_validation {
    label="Policy Validation";
    style="filled,rounded";
    color="orange";
    bgcolor="#FFF8E8";

    check_policy [shape=diamond, label="12-FA\nCompliant?"];
    check_secrets [shape=diamond, label="No Secrets\nin Root?"];

    policy_violation [shape=octagon, fillcolor=crimson,
                      label="BLOCKED\nPolicy Violation"];
    secrets_violation [shape=octagon, fillcolor=crimson,
                       label="BLOCKED\nRule #1: No Secrets in Root"];
  }

  // Connect initialization to validation
  check_deps -> check_policy;
  check_policy -> check_secrets [label="Pass"];
  check_policy -> policy_violation [label="Fail"];
  check_secrets -> secrets_violation [label="Secrets Found"];

  // =============================================================================
  // EXECUTION PHASE
  // =============================================================================
  subgraph cluster_execution {
    label="Optimization Execution";
    style="filled,rounded";
    color="purple";
    bgcolor="#F0E8F8";

    analyze_current [label="Analyze Current\nPerformance", fillcolor=purple];
    decision_1 [shape=diamond, label="Baseline\nEstablished?"];

    apply_quantization [label="Apply Vector\nQuantization (4-32x)", fillcolor=purple];
    decision_2 [shape=diamond, label="Memory\nReduced?"];

    setup_hnsw [label="Setup HNSW\nIndexing", fillcolor=purple];
    decision_3 [shape=diamond, label="Search Speed\nImproved?"];

    enable_caching [label="Enable Query\nCaching", fillcolor=purple];
    decision_4 [shape=diamond, label="Cache Hit\nRate OK?"];

    batch_operations [label="Optimize Batch\nOperations", fillcolor=purple];

    // Error handling within execution
    execution_error [shape=octagon, fillcolor=orange,
                     label="Optimization Failed"];
    retry_logic [label="Adjust Parameters", fillcolor=yellow];
  }

  // Connect validation to execution
  check_secrets -> analyze_current [label="Pass"];

  // Execution flow
  analyze_current -> decision_1;
  decision_1 -> apply_quantization [label="Yes"];
  decision_1 -> execution_error [label="No"];

  apply_quantization -> decision_2;
  decision_2 -> setup_hnsw [label="Yes"];
  decision_2 -> execution_error [label="No"];

  setup_hnsw -> decision_3;
  decision_3 -> enable_caching [label="Yes"];
  decision_3 -> execution_error [label="No"];

  enable_caching -> decision_4;
  decision_4 -> batch_operations [label="Yes"];
  decision_4 -> execution_error [label="No"];

  // Error recovery
  execution_error -> retry_logic;
  retry_logic -> analyze_current [label="Retry", style=dashed];
  retry_logic -> escalate [label="Cannot Optimize"];

  // =============================================================================
  // COORDINATION & MEMORY
  // =============================================================================
  subgraph cluster_coordination {
    label="Agent Coordination";
    style="filled,rounded";
    color="blue";
    bgcolor="#E8E8F8";

    memory_store [label="Store Optimization\nMetrics", fillcolor=lightblue];
    notify_coordinator [label="Notify Performance\nGains", fillcolor=lightblue];
    check_dependencies [shape=diamond, label="Other Systems\nDependent?"];
  }

  // Connect execution to coordination
  batch_operations -> memory_store;
  memory_store -> notify_coordinator;
  notify_coordinator -> check_dependencies;

  // =============================================================================
  // VALIDATION & QUALITY GATES
  // =============================================================================
  subgraph cluster_quality {
    label="Quality Validation";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    validate_output [shape=diamond, label="Performance\nImproved?"];
    run_tests [label="Benchmark\nPerformance", fillcolor=lightgreen];
    test_results [shape=diamond, label="150x Search\nSpeed?"];

    memory_test [label="Validate Memory\nReduction", fillcolor=lightgreen];
    memory_check [shape=diamond, label="4-32x\nReduction?"];

    quality_gate_fail [shape=octagon, fillcolor=orange,
                       label="Quality Gate Failed"];
  }

  // Connect coordination to quality
  check_dependencies -> validate_output [label="No"];

  // Quality flow
  validate_output -> run_tests [label="Yes"];
  validate_output -> quality_gate_fail [label="No"];

  run_tests -> test_results;
  test_results -> memory_test [label="Pass"];
  test_results -> quality_gate_fail [label="Fail"];

  memory_test -> memory_check;
  memory_check -> quality_gate_fail [label="Fail"];

  // =============================================================================
  // COMPLETION & CLEANUP
  // =============================================================================
  subgraph cluster_completion {
    label="Completion";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    cleanup [label="Cleanup Old\nIndexes", fillcolor=lightgreen];
    log_completion [label="Log Optimization\nMetrics"];
    success [label="Skill Complete", shape=doublecircle,
             fillcolor=green, style="filled,bold"];
  }

  // Connect quality to completion
  memory_check -> cleanup [label="Pass"];
  cleanup -> log_completion;
  log_completion -> success;

  // =============================================================================
  // ERROR ESCALATION PATH
  // =============================================================================
  subgraph cluster_errors {
    label="Error Handling & Escalation";
    style="filled,rounded";
    color="red";
    bgcolor="#F8E8E8";

    escalate [shape=hexagon, fillcolor=yellow,
              label="Escalate to User"];
    log_error [label="Log Error Details", fillcolor=orange];
    rollback [label="Revert Optimizations", fillcolor=orange];
    failure [label="Skill Failed", shape=doublecircle,
             fillcolor=red, style="filled,bold"];
  }

  // Error escalation flow
  escalate -> log_error;
  quality_gate_fail -> log_error;
  policy_violation -> log_error;
  secrets_violation -> log_error;

  log_error -> rollback;
  rollback -> failure;
}
