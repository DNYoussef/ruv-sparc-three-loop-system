digraph CODEX_AUTO_WORKFLOW {
  rankdir=TB;
  node [shape=box, style="rounded,filled"];

  subgraph cluster_initialization {
    label="Codex Auto Initialization";
    style="filled,rounded";
    color="lightblue";
    bgcolor="#E8F4F8";

    start [label="Codex Auto Invoked", shape=ellipse, fillcolor=lightblue];
    load_spec [label="Load Codex Configuration"];
    validate_input [label="Validate Task Requirements"];
    check_deps [label="Check Codex API Access"];

    start -> load_spec -> validate_input -> check_deps;
  }

  subgraph cluster_validation {
    label="Policy Validation";
    style="filled,rounded";
    color="orange";
    bgcolor="#FFF8E8";

    check_policy [shape=diamond, label="12-FA\nCompliant?"];
    check_secrets [shape=diamond, label="No Secrets\nin Root?"];

    policy_violation [shape=octagon, fillcolor=crimson, label="BLOCKED\nPolicy Violation"];
    secrets_violation [shape=octagon, fillcolor=crimson, label="BLOCKED\nRule #1: No Secrets in Root"];
  }

  check_deps -> check_policy;
  check_policy -> check_secrets [label="Pass"];
  check_policy -> policy_violation [label="Fail"];
  check_secrets -> secrets_violation [label="Secrets Found"];

  subgraph cluster_execution {
    label="Codex Rapid Prototyping Phase";
    style="filled,rounded";
    color="purple";
    bgcolor="#F0E8F8";

    generate_code [label="Generate Code\n(Full Auto Mode)", fillcolor=purple];
    execute_sandbox [label="Execute in Sandbox", fillcolor=purple];
    sandbox_check [shape=diamond, label="Execution\nSuccessful?"];
    iterate_fix [label="Iterate & Auto-Fix", fillcolor=purple];
    iteration_check [shape=diamond, label="Fixed?"];

    execution_error [shape=octagon, fillcolor=orange, label="Sandbox Error"];
    retry_logic [label="Retry Generation", fillcolor=yellow];
  }

  check_secrets -> generate_code [label="Pass"];
  generate_code -> execute_sandbox;
  execute_sandbox -> sandbox_check;
  sandbox_check -> iterate_fix [label="No"];
  sandbox_check -> memory_store [label="Yes"];
  iterate_fix -> iteration_check;
  iteration_check -> execute_sandbox [label="Yes", style=dashed];
  iteration_check -> execution_error [label="No"];
  execution_error -> retry_logic -> generate_code [label="Retry", style=dashed];
  retry_logic -> escalate [label="Max Retries"];

  subgraph cluster_coordination {
    label="Codex Coordination";
    style="filled,rounded";
    color="blue";
    bgcolor="#E8E8F8";

    memory_store [label="Store Prototype\nin Memory", fillcolor=lightblue];
    track_iterations [label="Track Iteration Count", fillcolor=lightblue];
    notify_coordinator [label="Notify Coordinator", fillcolor=lightblue];
  }

  memory_store -> track_iterations -> notify_coordinator;

  subgraph cluster_quality {
    label="Quality Validation";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    validate_output [shape=diamond, label="Prototype\nWorking?"];
    run_tests [label="Run Auto-Generated Tests", fillcolor=lightgreen];
    test_results [shape=diamond, label="Tests Pass?"];
    quality_gate_fail [shape=octagon, fillcolor=orange, label="Quality Gate Failed"];
  }

  notify_coordinator -> validate_output;
  validate_output -> run_tests [label="Yes"];
  validate_output -> quality_gate_fail [label="No"];
  run_tests -> test_results;
  test_results -> quality_gate_fail [label="Fail"];

  subgraph cluster_completion {
    label="Completion";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    export_code [label="Export Working Code", fillcolor=lightgreen];
    cleanup [label="Cleanup Sandbox", fillcolor=lightgreen];
    log_completion [label="Log Metrics"];
    success [label="Prototype Complete", shape=doublecircle, fillcolor=green, style="filled,bold"];
  }

  test_results -> export_code [label="Pass"];
  export_code -> cleanup -> log_completion -> success;

  subgraph cluster_errors {
    label="Error Handling & Escalation";
    style="filled,rounded";
    color="red";
    bgcolor="#F8E8E8";

    escalate [shape=hexagon, fillcolor=yellow, label="Escalate to User"];
    log_error [label="Log Error Details", fillcolor=orange];
    rollback [label="Rollback Changes", fillcolor=orange];
    failure [label="Prototyping Failed", shape=doublecircle, fillcolor=red, style="filled,bold"];
  }

  escalate -> log_error;
  quality_gate_fail -> log_error;
  policy_violation -> log_error;
  secrets_violation -> log_error;
  log_error -> rollback -> failure;
}
