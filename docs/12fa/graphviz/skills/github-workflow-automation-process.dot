digraph GITHUB_WORKFLOW_AUTOMATION_WORKFLOW {
  rankdir=TB;
  node [shape=box, style="rounded,filled"];

  subgraph cluster_initialization {
    label="Workflow Automation Initialization";
    style="filled,rounded";
    color="lightblue";
    bgcolor="#E8F4F8";

    start [label="Workflow Automation Invoked", shape=ellipse, fillcolor=lightblue];
    load_spec [label="Load Workflow Config"];
    validate_input [label="Validate GitHub Actions"];
    check_deps [label="Check gh CLI & YAML"];

    start -> load_spec -> validate_input -> check_deps;
  }

  subgraph cluster_validation {
    label="Policy Validation";
    style="filled,rounded";
    color="orange";
    bgcolor="#FFF8E8";

    check_policy [shape=diamond, label="12-FA\nCompliant?"];
    check_secrets [shape=diamond, label="No Secrets\nin Root?"];

    policy_violation [shape=octagon, fillcolor=crimson, label="BLOCKED\nPolicy Violation"];
    secrets_violation [shape=octagon, fillcolor=crimson, label="BLOCKED\nRule #1: No Secrets in Root"];
  }

  check_deps -> check_policy;
  check_policy -> check_secrets [label="Pass"];
  check_policy -> policy_violation [label="Fail"];
  check_secrets -> secrets_violation [label="Secrets Found"];

  subgraph cluster_execution {
    label="Workflow Automation Phase";
    style="filled,rounded";
    color="purple";
    bgcolor="#F0E8F8";

    generate_workflows [label="Generate GitHub Actions\nWorkflow Files", fillcolor=purple];
    configure_ci [label="Configure CI/CD Pipeline", fillcolor=purple];
    setup_triggers [label="Setup Event Triggers", fillcolor=purple];
    test_workflows [label="Test Workflow Execution", fillcolor=purple];
    workflow_check [shape=diamond, label="Workflows\nWorking?"];

    execution_error [shape=octagon, fillcolor=orange, label="Workflow Error"];
    retry_logic [label="Fix & Retry", fillcolor=yellow];
  }

  check_secrets -> generate_workflows [label="Pass"];
  generate_workflows -> configure_ci -> setup_triggers -> test_workflows;
  test_workflows -> workflow_check;
  workflow_check -> execution_error [label="No"];
  execution_error -> retry_logic -> test_workflows [label="Retry", style=dashed];
  retry_logic -> escalate [label="Max Retries"];

  subgraph cluster_coordination {
    label="Workflow Coordination";
    style="filled,rounded";
    color="blue";
    bgcolor="#E8E8F8";

    memory_store [label="Store Workflow State", fillcolor=lightblue];
    track_runs [label="Track Workflow Runs", fillcolor=lightblue];
    notify_coordinator [label="Notify Coordinator", fillcolor=lightblue];
  }

  workflow_check -> memory_store [label="Yes"];
  memory_store -> track_runs -> notify_coordinator;

  subgraph cluster_quality {
    label="Quality Validation";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    validate_output [shape=diamond, label="All Workflows\nValid?"];
    validate_yaml [label="Validate YAML Syntax", fillcolor=lightgreen];
    yaml_check [shape=diamond, label="YAML Valid?"];
    quality_gate_fail [shape=octagon, fillcolor=orange, label="Quality Gate Failed"];
  }

  notify_coordinator -> validate_output;
  validate_output -> validate_yaml [label="Yes"];
  validate_output -> quality_gate_fail [label="No"];
  validate_yaml -> yaml_check;
  yaml_check -> quality_gate_fail [label="No"];

  subgraph cluster_completion {
    label="Completion";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    commit_workflows [label="Commit Workflow Files", fillcolor=lightgreen];
    enable_workflows [label="Enable Workflows", fillcolor=lightgreen];
    cleanup [label="Cleanup Resources", fillcolor=lightgreen];
    log_completion [label="Log Metrics"];
    success [label="Workflows Automated", shape=doublecircle, fillcolor=green, style="filled,bold"];
  }

  yaml_check -> commit_workflows [label="Yes"];
  commit_workflows -> enable_workflows -> cleanup -> log_completion -> success;

  subgraph cluster_errors {
    label="Error Handling & Escalation";
    style="filled,rounded";
    color="red";
    bgcolor="#F8E8E8";

    escalate [shape=hexagon, fillcolor=yellow, label="Escalate to User"];
    log_error [label="Log Error Details", fillcolor=orange];
    rollback [label="Rollback Changes", fillcolor=orange];
    failure [label="Automation Failed", shape=doublecircle, fillcolor=red, style="filled,bold"];
  }

  escalate -> log_error;
  quality_gate_fail -> log_error;
  policy_violation -> log_error;
  secrets_violation -> log_error;
  log_error -> rollback -> failure;
}
