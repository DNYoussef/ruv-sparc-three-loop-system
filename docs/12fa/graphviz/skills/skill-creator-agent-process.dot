digraph SKILL_CREATOR_AGENT_WORKFLOW {
  // Layout configuration
  rankdir=TB;
  node [shape=box, style="rounded,filled"];

  // =============================================================================
  // INITIALIZATION PHASE
  // =============================================================================
  subgraph cluster_initialization {
    label="Skill Creator Agent Initialization";
    style="filled,rounded";
    color="lightblue";
    bgcolor="#E8F4F8";

    start [label="Agent Invoked", shape=ellipse, fillcolor=lightblue];
    load_spec [label="Load Agent Specifications"];
    validate_input [label="Validate Skill Requirements"];
    check_deps [label="Check Evidence-Based Dependencies"];

    start -> load_spec;
    load_spec -> validate_input;
    validate_input -> check_deps;
  }

  // =============================================================================
  // VALIDATION & POLICY ENFORCEMENT
  // =============================================================================
  subgraph cluster_validation {
    label="Policy Validation";
    style="filled,rounded";
    color="orange";
    bgcolor="#FFF8E8";

    check_policy [shape=diamond, label="12-FA\nCompliant?"];
    check_secrets [shape=diamond, label="No Secrets\nin Root?"];
    validate_agent_spec [shape=diamond, label="Agent Spec\nValid?"];

    policy_violation [shape=octagon, fillcolor=crimson,
                      label="BLOCKED\nPolicy Violation"];
    secrets_violation [shape=octagon, fillcolor=crimson,
                       label="BLOCKED\nRule #1: No Secrets in Root"];
    spec_violation [shape=octagon, fillcolor=orange,
                    label="WARN\nInvalid Agent Spec"];
  }

  // Connect initialization to validation
  check_deps -> check_policy;
  check_policy -> check_secrets [label="Pass"];
  check_policy -> policy_violation [label="Fail"];
  check_secrets -> validate_agent_spec [label="Pass"];
  check_secrets -> secrets_violation [label="Secrets Found"];
  validate_agent_spec -> spec_violation [label="Invalid"];

  // =============================================================================
  // EXECUTION PHASE - AGENT & SKILL CREATION
  // =============================================================================
  subgraph cluster_execution {
    label="Agent & Skill Creation Phase";
    style="filled,rounded";
    color="purple";
    bgcolor="#F0E8F8";

    design_agent [label="Design Specialist Agent\n(Evidence-Based)", fillcolor=purple];
    agent_check [shape=diamond, label="Agent Design\nValid?"];

    create_prompt [label="Create Agent Prompt\n(Self-Consistency)", fillcolor=purple];
    prompt_check [shape=diamond, label="Prompt\nOptimal?"];

    create_skill_wrapper [label="Create Skill Wrapper", fillcolor=purple];
    link_agent [label="Link Agent to Skill", fillcolor=purple];
    integration_check [shape=diamond, label="Integration\nSuccessful?"];

    // Error handling within execution
    design_error [shape=octagon, fillcolor=orange,
                  label="Design Error"];
    prompt_error [shape=octagon, fillcolor=orange,
                  label="Prompt Optimization Failed"];
    retry_logic [label="Retry with Refinement", fillcolor=yellow];
  }

  // Connect validation to execution
  validate_agent_spec -> design_agent [label="Valid"];

  // Execution flow
  design_agent -> agent_check;
  agent_check -> create_prompt [label="Yes"];
  agent_check -> design_error [label="No"];

  create_prompt -> prompt_check;
  prompt_check -> create_skill_wrapper [label="Yes"];
  prompt_check -> prompt_error [label="No"];

  create_skill_wrapper -> link_agent;
  link_agent -> integration_check;
  integration_check -> prompt_error [label="No"];

  // Error recovery
  design_error -> retry_logic;
  prompt_error -> retry_logic;
  retry_logic -> design_agent [label="Retry", style=dashed];
  retry_logic -> escalate [label="Max Retries"];

  // =============================================================================
  // COORDINATION & MEMORY
  // =============================================================================
  subgraph cluster_coordination {
    label="Agent Coordination";
    style="filled,rounded";
    color="blue";
    bgcolor="#E8E8F8";

    register_agent [label="Register Agent\nin System", fillcolor=lightblue];
    register_skill [label="Register Associated Skill", fillcolor=lightblue];
    memory_store [label="Store Agent Patterns\nin Memory", fillcolor=lightblue];
    notify_coordinator [label="Notify\nOrchestrator", fillcolor=lightblue];
    check_dependencies [shape=diamond, label="Other Skills\nDependent?"];
  }

  // Connect execution to coordination
  integration_check -> register_agent [label="Yes"];
  register_agent -> register_skill;
  register_skill -> memory_store;
  memory_store -> notify_coordinator;
  notify_coordinator -> check_dependencies;

  // =============================================================================
  // VALIDATION & QUALITY GATES
  // =============================================================================
  subgraph cluster_quality {
    label="Quality Validation";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    validate_agent_behavior [shape=diamond, label="Agent Behaves\nCorrectly?"];
    test_skill_invocation [label="Test Skill Invocation", fillcolor=lightgreen];
    test_results [shape=diamond, label="Tests Pass?"];

    validate_prompt_quality [label="Validate Prompt Quality", fillcolor=lightgreen];
    prompt_quality_check [shape=diamond, label="Evidence-Based\nTechniques Applied?"];

    quality_gate_fail [shape=octagon, fillcolor=orange,
                       label="Quality Gate Failed"];
  }

  // Connect coordination to quality
  check_dependencies -> validate_agent_behavior [label="No"];

  // Quality flow
  validate_agent_behavior -> test_skill_invocation [label="Yes"];
  validate_agent_behavior -> quality_gate_fail [label="No"];

  test_skill_invocation -> test_results;
  test_results -> validate_prompt_quality [label="Pass"];
  test_results -> quality_gate_fail [label="Fail"];

  validate_prompt_quality -> prompt_quality_check;
  prompt_quality_check -> quality_gate_fail [label="No"];

  // =============================================================================
  // COMPLETION & CLEANUP
  // =============================================================================
  subgraph cluster_completion {
    label="Completion";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    document_agent [label="Document Agent Capabilities", fillcolor=lightgreen];
    add_examples [label="Add Usage Examples", fillcolor=lightgreen];
    cleanup [label="Cleanup Resources", fillcolor=lightgreen];
    log_completion [label="Log Creation Metrics"];
    success [label="Agent & Skill Created", shape=doublecircle,
             fillcolor=green, style="filled,bold"];
  }

  // Connect quality to completion
  prompt_quality_check -> document_agent [label="Yes"];
  document_agent -> add_examples;
  add_examples -> cleanup;
  cleanup -> log_completion;
  log_completion -> success;

  // =============================================================================
  // ERROR ESCALATION PATH
  // =============================================================================
  subgraph cluster_errors {
    label="Error Handling & Escalation";
    style="filled,rounded";
    color="red";
    bgcolor="#F8E8E8";

    escalate [shape=hexagon, fillcolor=yellow,
              label="Escalate to User"];
    log_error [label="Log Error Details", fillcolor=orange];
    rollback [label="Rollback Changes", fillcolor=orange];
    failure [label="Creation Failed", shape=doublecircle,
             fillcolor=red, style="filled,bold"];
  }

  // Error escalation flow
  escalate -> log_error;
  quality_gate_fail -> log_error;
  policy_violation -> log_error;
  secrets_violation -> log_error;
  spec_violation -> log_error;

  log_error -> rollback;
  rollback -> failure;

  // =============================================================================
  // LEGEND
  // =============================================================================
  subgraph cluster_legend {
    label="Legend";
    rank=sink;
    style="filled,rounded";
    bgcolor="#F8F8F8";

    legend_start [shape=ellipse, label="Entry Point", fillcolor=lightblue];
    legend_decision [shape=diamond, label="Decision"];
    legend_process [shape=box, label="Process", fillcolor=purple];
    legend_block [shape=octagon, fillcolor=crimson, label="Blocker"];
    legend_warn [shape=octagon, fillcolor=orange, label="Warning"];
    legend_manual [shape=hexagon, fillcolor=yellow, label="Manual"];
    legend_success [shape=doublecircle, fillcolor=green, label="Success"];
    legend_failure [shape=doublecircle, fillcolor=red, label="Failure"];

    // Hide from main layout
    legend_start -> legend_decision [style=invis];
    legend_decision -> legend_process [style=invis];
    legend_process -> legend_block [style=invis];
    legend_block -> legend_warn [style=invis];
    legend_warn -> legend_manual [style=invis];
    legend_manual -> legend_success [style=invis];
    legend_success -> legend_failure [style=invis];
  }
}
