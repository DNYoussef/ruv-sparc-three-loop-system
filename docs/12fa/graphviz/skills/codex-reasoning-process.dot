digraph CODEX_REASONING_WORKFLOW {
  rankdir=TB;
  node [shape=box, style="rounded,filled"];

  subgraph cluster_initialization {
    label="Codex Reasoning Initialization";
    style="filled,rounded";
    color="lightblue";
    bgcolor="#E8F4F8";

    start [label="Codex Reasoning Invoked", shape=ellipse, fillcolor=lightblue];
    load_spec [label="Load Reasoning Config"];
    validate_input [label="Validate Problem Statement"];
    check_deps [label="Check Codex API"];

    start -> load_spec -> validate_input -> check_deps;
  }

  subgraph cluster_validation {
    label="Policy Validation";
    style="filled,rounded";
    color="orange";
    bgcolor="#FFF8E8";

    check_policy [shape=diamond, label="12-FA\nCompliant?"];
    check_secrets [shape=diamond, label="No Secrets\nin Root?"];

    policy_violation [shape=octagon, fillcolor=crimson, label="BLOCKED\nPolicy Violation"];
    secrets_violation [shape=octagon, fillcolor=crimson, label="BLOCKED\nRule #1: No Secrets in Root"];
  }

  check_deps -> check_policy;
  check_policy -> check_secrets [label="Pass"];
  check_policy -> policy_violation [label="Fail"];
  check_secrets -> secrets_violation [label="Secrets Found"];

  subgraph cluster_execution {
    label="Reasoning Analysis Phase";
    style="filled,rounded";
    color="purple";
    bgcolor="#F0E8F8";

    analyze_problem [label="Analyze Problem\n(Alternative Perspectives)", fillcolor=purple];
    generate_approaches [label="Generate Multiple Approaches", fillcolor=purple];
    evaluate_approaches [label="Evaluate Trade-offs", fillcolor=purple];
    select_approach [label="Select Optimal Approach", fillcolor=purple];
    approach_check [shape=diamond, label="Approach\nSelected?"];

    execution_error [shape=octagon, fillcolor=orange, label="Reasoning Error"];
    retry_logic [label="Retry Analysis", fillcolor=yellow];
  }

  check_secrets -> analyze_problem [label="Pass"];
  analyze_problem -> generate_approaches -> evaluate_approaches -> select_approach;
  select_approach -> approach_check;
  approach_check -> execution_error [label="No"];
  execution_error -> retry_logic -> analyze_problem [label="Retry", style=dashed];
  retry_logic -> escalate [label="Max Retries"];

  subgraph cluster_coordination {
    label="Reasoning Coordination";
    style="filled,rounded";
    color="blue";
    bgcolor="#E8E8F8";

    memory_store [label="Store Reasoning Trace", fillcolor=lightblue];
    track_alternatives [label="Track Alternative Solutions", fillcolor=lightblue];
    notify_coordinator [label="Notify Coordinator", fillcolor=lightblue];
  }

  approach_check -> memory_store [label="Yes"];
  memory_store -> track_alternatives -> notify_coordinator;

  subgraph cluster_quality {
    label="Quality Validation";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    validate_output [shape=diamond, label="Reasoning\nSound?"];
    verify_logic [label="Verify Logical Consistency", fillcolor=lightgreen];
    logic_check [shape=diamond, label="Logic Valid?"];
    quality_gate_fail [shape=octagon, fillcolor=orange, label="Quality Gate Failed"];
  }

  notify_coordinator -> validate_output;
  validate_output -> verify_logic [label="Yes"];
  validate_output -> quality_gate_fail [label="No"];
  verify_logic -> logic_check;
  logic_check -> quality_gate_fail [label="No"];

  subgraph cluster_completion {
    label="Completion";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    generate_report [label="Generate Reasoning Report", fillcolor=lightgreen];
    document_approaches [label="Document All Approaches", fillcolor=lightgreen];
    cleanup [label="Cleanup Resources", fillcolor=lightgreen];
    log_completion [label="Log Metrics"];
    success [label="Reasoning Complete", shape=doublecircle, fillcolor=green, style="filled,bold"];
  }

  logic_check -> generate_report [label="Yes"];
  generate_report -> document_approaches -> cleanup -> log_completion -> success;

  subgraph cluster_errors {
    label="Error Handling & Escalation";
    style="filled,rounded";
    color="red";
    bgcolor="#F8E8E8";

    escalate [shape=hexagon, fillcolor=yellow, label="Escalate to User"];
    log_error [label="Log Error Details", fillcolor=orange];
    rollback [label="Rollback Changes", fillcolor=orange];
    failure [label="Reasoning Failed", shape=doublecircle, fillcolor=red, style="filled,bold"];
  }

  escalate -> log_error;
  quality_gate_fail -> log_error;
  policy_violation -> log_error;
  secrets_violation -> log_error;
  log_error -> rollback -> failure;
}
