digraph REASONINGBANK_AGENTDB_WORKFLOW {
  // Layout configuration
  rankdir=TB;
  node [shape=box, style="rounded,filled"];

  // =============================================================================
  // INITIALIZATION PHASE
  // =============================================================================
  subgraph cluster_initialization {
    label="Skill Initialization";
    style="filled,rounded";
    color="lightblue";
    bgcolor="#E8F4F8";

    start [label="Skill Invoked", shape=ellipse, fillcolor=lightblue];
    load_spec [label="Load skill.yaml"];
    validate_input [label="Validate Learning\nConfig"];
    check_deps [label="Check AgentDB\n150x Vector DB"];

    start -> load_spec;
    load_spec -> validate_input;
    validate_input -> check_deps;
  }

  // =============================================================================
  // VALIDATION & POLICY ENFORCEMENT
  // =============================================================================
  subgraph cluster_validation {
    label="Policy Validation";
    style="filled,rounded";
    color="orange";
    bgcolor="#FFF8E8";

    check_policy [shape=diamond, label="12-FA\nCompliant?"];
    check_secrets [shape=diamond, label="No Secrets\nin Root?"];

    policy_violation [shape=octagon, fillcolor=crimson,
                      label="BLOCKED\nPolicy Violation"];
    secrets_violation [shape=octagon, fillcolor=crimson,
                       label="BLOCKED\nRule #1: No Secrets in Root"];
  }

  // Connect initialization to validation
  check_deps -> check_policy;
  check_policy -> check_secrets [label="Pass"];
  check_policy -> policy_violation [label="Fail"];
  check_secrets -> secrets_violation [label="Secrets Found"];

  // =============================================================================
  // EXECUTION PHASE
  // =============================================================================
  subgraph cluster_execution {
    label="ReasoningBank Learning";
    style="filled,rounded";
    color="purple";
    bgcolor="#F0E8F8";

    track_trajectories [label="Track Decision\nTrajectories", fillcolor=purple];
    decision_1 [shape=diamond, label="Trajectories\nRecorded?"];

    judge_verdicts [label="Judge Verdict\nQuality", fillcolor=purple];
    decision_2 [shape=diamond, label="Verdict\nScored?"];

    distill_memory [label="Distill Memory\nPatterns", fillcolor=purple];
    decision_3 [shape=diamond, label="Patterns\nExtracted?"];

    recognize_patterns [label="Recognize Success\nPatterns", fillcolor=purple];
    decision_4 [shape=diamond, label="Patterns\nIdentified?"];

    experience_replay [label="Apply Experience\nReplay", fillcolor=purple];

    // Error handling within execution
    execution_error [shape=octagon, fillcolor=orange,
                     label="Learning Error"];
    retry_logic [label="Retry Learning", fillcolor=yellow];
  }

  // Connect validation to execution
  check_secrets -> track_trajectories [label="Pass"];

  // Execution flow
  track_trajectories -> decision_1;
  decision_1 -> judge_verdicts [label="Yes"];
  decision_1 -> execution_error [label="No"];

  judge_verdicts -> decision_2;
  decision_2 -> distill_memory [label="Yes"];
  decision_2 -> execution_error [label="No"];

  distill_memory -> decision_3;
  decision_3 -> recognize_patterns [label="Yes"];
  decision_3 -> execution_error [label="No"];

  recognize_patterns -> decision_4;
  decision_4 -> experience_replay [label="Yes"];
  decision_4 -> execution_error [label="No"];

  // Error recovery
  execution_error -> retry_logic;
  retry_logic -> track_trajectories [label="Retry", style=dashed];
  retry_logic -> escalate [label="Learning Failed"];

  // =============================================================================
  // COORDINATION & MEMORY
  // =============================================================================
  subgraph cluster_coordination {
    label="Agent Coordination";
    style="filled,rounded";
    color="blue";
    bgcolor="#E8E8F8";

    memory_store [label="Store Learning\nPatterns", fillcolor=lightblue];
    notify_coordinator [label="Notify Learning\nComplete", fillcolor=lightblue];
    check_dependencies [shape=diamond, label="Other Agents\nLearning?"];
  }

  // Connect execution to coordination
  experience_replay -> memory_store;
  memory_store -> notify_coordinator;
  notify_coordinator -> check_dependencies;

  // =============================================================================
  // VALIDATION & QUALITY GATES
  // =============================================================================
  subgraph cluster_quality {
    label="Quality Validation";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    validate_output [shape=diamond, label="Learning\nImproved?"];
    run_tests [label="Test Decision\nQuality", fillcolor=lightgreen];
    test_results [shape=diamond, label="Quality\nIncreased?"];

    benchmark_speed [label="Benchmark Vector\nSpeed", fillcolor=lightgreen];
    speed_check [shape=diamond, label="150x Faster\nSearch?"];

    quality_gate_fail [shape=octagon, fillcolor=orange,
                       label="Quality Gate Failed"];
  }

  // Connect coordination to quality
  check_dependencies -> validate_output [label="No"];

  // Quality flow
  validate_output -> run_tests [label="Yes"];
  validate_output -> quality_gate_fail [label="No"];

  run_tests -> test_results;
  test_results -> benchmark_speed [label="Pass"];
  test_results -> quality_gate_fail [label="Fail"];

  benchmark_speed -> speed_check;
  speed_check -> quality_gate_fail [label="Fail"];

  // =============================================================================
  // COMPLETION & CLEANUP
  // =============================================================================
  subgraph cluster_completion {
    label="Completion";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    cleanup [label="Cleanup Temp\nTrajectories", fillcolor=lightgreen];
    log_completion [label="Log Learning\nMetrics"];
    success [label="Skill Complete", shape=doublecircle,
             fillcolor=green, style="filled,bold"];
  }

  // Connect quality to completion
  speed_check -> cleanup [label="Pass"];
  cleanup -> log_completion;
  log_completion -> success;

  // =============================================================================
  // ERROR ESCALATION PATH
  // =============================================================================
  subgraph cluster_errors {
    label="Error Handling & Escalation";
    style="filled,rounded";
    color="red";
    bgcolor="#F8E8E8";

    escalate [shape=hexagon, fillcolor=yellow,
              label="Escalate to User"];
    log_error [label="Log Error Details", fillcolor=orange];
    rollback [label="Rollback Learning", fillcolor=orange];
    failure [label="Skill Failed", shape=doublecircle,
             fillcolor=red, style="filled,bold"];
  }

  // Error escalation flow
  escalate -> log_error;
  quality_gate_fail -> log_error;
  policy_violation -> log_error;
  secrets_violation -> log_error;

  log_error -> rollback;
  rollback -> failure;
}
