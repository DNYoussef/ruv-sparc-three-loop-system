digraph GITHUB_MULTI_REPO_WORKFLOW {
  rankdir=TB;
  node [shape=box, style="rounded,filled"];

  subgraph cluster_initialization {
    label="Multi-Repo Initialization";
    style="filled,rounded";
    color="lightblue";
    bgcolor="#E8F4F8";

    start [label="Multi-Repo Invoked", shape=ellipse, fillcolor=lightblue];
    load_spec [label="Load Repository List"];
    validate_input [label="Validate GitHub Access"];
    check_deps [label="Check gh CLI"];

    start -> load_spec -> validate_input -> check_deps;
  }

  subgraph cluster_validation {
    label="Policy Validation";
    style="filled,rounded";
    color="orange";
    bgcolor="#FFF8E8";

    check_policy [shape=diamond, label="12-FA\nCompliant?"];
    check_secrets [shape=diamond, label="No Secrets\nin Root?"];

    policy_violation [shape=octagon, fillcolor=crimson, label="BLOCKED\nPolicy Violation"];
    secrets_violation [shape=octagon, fillcolor=crimson, label="BLOCKED\nRule #1: No Secrets in Root"];
  }

  check_deps -> check_policy;
  check_policy -> check_secrets [label="Pass"];
  check_policy -> policy_violation [label="Fail"];
  check_secrets -> secrets_violation [label="Secrets Found"];

  subgraph cluster_execution {
    label="Multi-Repo Coordination Phase";
    style="filled,rounded";
    color="purple";
    bgcolor="#F0E8F8";

    analyze_repos [label="Analyze Repositories\n(Dependencies, Structure)", fillcolor=purple];
    sync_changes [label="Synchronize Changes\nAcross Repos", fillcolor=purple];
    manage_dependencies [label="Manage Cross-Repo\nDependencies", fillcolor=purple];
    apply_changes [label="Apply Changes in Parallel", fillcolor=purple];
    changes_check [shape=diamond, label="All Changes\nApplied?"];

    execution_error [shape=octagon, fillcolor=orange, label="Execution Error"];
    retry_logic [label="Retry Failed Repos", fillcolor=yellow];
  }

  check_secrets -> analyze_repos [label="Pass"];
  analyze_repos -> sync_changes -> manage_dependencies -> apply_changes;
  apply_changes -> changes_check;
  changes_check -> execution_error [label="No"];
  execution_error -> retry_logic -> apply_changes [label="Retry", style=dashed];
  retry_logic -> escalate [label="Max Retries"];

  subgraph cluster_coordination {
    label="Repository Coordination";
    style="filled,rounded";
    color="blue";
    bgcolor="#E8E8F8";

    memory_store [label="Store Repo States\nin Memory", fillcolor=lightblue];
    track_changes [label="Track Change Propagation", fillcolor=lightblue];
    notify_coordinator [label="Notify Coordinator", fillcolor=lightblue];
  }

  changes_check -> memory_store [label="Yes"];
  memory_store -> track_changes -> notify_coordinator;

  subgraph cluster_quality {
    label="Quality Validation";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    validate_output [shape=diamond, label="All Repos\nConsistent?"];
    run_tests [label="Run Cross-Repo Tests", fillcolor=lightgreen];
    test_results [shape=diamond, label="Tests Pass?"];
    quality_gate_fail [shape=octagon, fillcolor=orange, label="Quality Gate Failed"];
  }

  notify_coordinator -> validate_output;
  validate_output -> run_tests [label="Yes"];
  validate_output -> quality_gate_fail [label="No"];
  run_tests -> test_results;
  test_results -> quality_gate_fail [label="Fail"];

  subgraph cluster_completion {
    label="Completion";
    style="filled,rounded";
    color="green";
    bgcolor="#E8F8E8";

    generate_report [label="Generate Sync Report", fillcolor=lightgreen];
    cleanup [label="Cleanup Resources", fillcolor=lightgreen];
    log_completion [label="Log Metrics"];
    success [label="Multi-Repo Sync Complete", shape=doublecircle, fillcolor=green, style="filled,bold"];
  }

  test_results -> generate_report [label="Pass"];
  generate_report -> cleanup -> log_completion -> success;

  subgraph cluster_errors {
    label="Error Handling & Escalation";
    style="filled,rounded";
    color="red";
    bgcolor="#F8E8E8";

    escalate [shape=hexagon, fillcolor=yellow, label="Escalate to User"];
    log_error [label="Log Error Details", fillcolor=orange];
    rollback [label="Rollback Changes", fillcolor=orange];
    failure [label="Multi-Repo Failed", shape=doublecircle, fillcolor=red, style="filled,bold"];
  }

  escalate -> log_error;
  quality_gate_fail -> log_error;
  policy_violation -> log_error;
  secrets_violation -> log_error;
  log_error -> rollback -> failure;
}
